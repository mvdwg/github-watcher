<p> Logged user: <%= @current_user.github_login %> (<%= @current_user.email %>) </p>

<h1> New Alert </h1>
<form action="/alerts" method="post">
  <div>
    <label> Owner:
      <input type"text" name="owner">
    </label>
  </div>
  <div>
    <label> Repo:
      <input type"text" name="repo">
    </label>
  </div>
  <div>
    <label> Branch:
      <input type"text" name="branch">
    </label>
  </div>
  <div>
    <label> Path:
      <input type"text" name="path">
    </label>
  </div>
  <input type="submit">
</form>

<% @current_user.alerts.each do |alert| %>
  <h1> Alert #<%= alert.id %> </h1>
  <p><%= alert.values %> </p>
  <% if alert.alarms.any? %>
    <h2> Alarms </h2>

    <% alert.alarms.each do |alarm| %>
      <p><%= alarm.values %> </p>
    <% end %>
  <% end %>
<% end %>
