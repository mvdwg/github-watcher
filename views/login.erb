<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<style>
  .jumbotron {
    background-color: white;
    padding-top: 50px;
    padding-bottom: 50px;
  }

  .octicon, .icon {
    vertical-align: bottom;
  }
</style>

<div class="jumbotron">
  <div class="container">
    <p class="text-center">
      <img class="icon" width=80 src="/elephant.svg" />
      <%= icon("telescope", 50) %>
      <%= icon("mark-github", 80) %>
    </p>
    <h1 class="text-center">
      Github Watcher
    </h1>
    <p class="text-center">
      Because sometimes Github notifications fall short...
    </p>
    <div class="text-center">
      <p>
      <a href="/auth/github" class='btn btn-default btn-lg'>
        <%= icon("octoface", 30) %>
        Sign in with GitHub
      <a>
      </p>
      <p>
        <a class="github-button" href="https://github.com/mvdwg/github-watcher" data-icon="octicon-star" data-style="mega" data-count-href="/mvdwg/github-watcher/stargazers" data-count-api="/repos/mvdwg/github-watcher#stargazers_count" data-count-aria-label="# stargazers on GitHub" aria-label="Star mvdwg/github-watcher on GitHub">Star</a>
        <a class="github-button" href="https://github.com/mvdwg/github-watcher/fork" data-icon="octicon-repo-forked" data-style="mega" data-count-href="/mvdwg/github-watcher/network" data-count-api="/repos/mvdwg/github-watcher#forks_count" data-count-aria-label="# forks on GitHub" aria-label="Fork mvdwg/github-watcher on GitHub">Fork</a>
      </p>
    </div>
  </div>
</div>
<script async defer src="https://buttons.github.io/buttons.js"></script>
